<div class="container">
<%= simple_form_for @farms, html: { multipart: true } do |f| %>
  <% if @farms.errors.any? %>
    <div id="errors">
      <p>
        <%= @farms.errors.count %>
        Prevented this farm from saving
      </p>
      <ul>
        <% @farms.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
    <p><%= f.input :address, input_html: { class: 'form-control' } %></p>
    <p><%= f.input :hours, input_html: { class: 'form-control' } %></p>
    <p><%= f.input :title, input_html: { class: 'form-control' } %></p>
    <p><%= f.input :description, input_html: { class: 'form-control' } %></p>
  </div>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>
