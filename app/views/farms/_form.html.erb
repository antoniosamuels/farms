<div class="container">
<%= simple_form_for @farms, html: { multipart: true } do |f| %>
  <% if @farms.errors.any? %>
    <div id="errors">
      <p>
        <%= @farms.errors.count %>
        Prevented this farm from saving
      </p>
      <ul>
        <% @farms.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
    <h1>Edit farm information</h1>
    <p>
      <%= f.label :Address %><br>
      <%= f.text_field :address, input_html: { class: 'form-control' } %>
    </p>
    <p>
      <%= f.label :Hours %><br>
      <%= f.text_field :hours, input_html: { class: 'form-control' } %>
    </p>
    <p>
      <%= f.label :Title %><br>
      <%= f.text_field :title, input_html: { class: 'form-control' } %>
    </p>
    <p>
      <%= f.label :Description %><br>
      <%= f.text_area :description, input_html: { class: 'form-control' } %>
    </p>
    <p>
      <%= f.label :Description %><br>
      <%= f.input :image, input_html: { class: 'form-control' } %>
    </p>
    <p>
      <%= f.label :category_id %><br>
      <%= f.association :category, as: :check_boxes %>
    </p>

  </div>
  <%= f.button :submit, class: "btn" %>
<% end %>
</div>
